<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <%- include header %>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div ng-app="index" ng-controller="indexCtrl">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="row">
          <div class="col-lg-2">
            <div class="row" style="margin-top: 5px; margin-left: 2px">
              <span>User Name</span>
            </div>
            <div class="row" style="margin-top: 5px; margin-left: 2px">
              <span>Password</span>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="row">
              <input type="text" ng-model="username" placeholder="User Name">
            </div>
            <div class="row">
              <input type="Password" ng-model="password" placeholder="Password">
            </div>
          </div>
        </div>
        <div class="row" ng-model="Submit" style="margin-top: 5px; margin-left: 2px">
          <button ng-click="triger()">{{Submit}}</button>
        </div>
      </div>
    </div>

  </body>
  <%- include footer%>
  <script src="javascripts/login.js"></script>
</html>
